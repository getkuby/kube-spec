#! /usr/bin/env ruby

require 'kube-spec'
require 'drb/drb'

case ARGV[0]
  when 'serve'
    uri = ENV.fetch('KUBE_SPEC_SERVER_URI', KubeSpec::Server::DEFAULT_URI)
    DRb.start_service(uri, KubeSpec::Server.new)
    puts "DRb server started on #{uri}"
    DRb.thread.join
  else
    puts "Command #{ARGV[0]} not recognized"
end
